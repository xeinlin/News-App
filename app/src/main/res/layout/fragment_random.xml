<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.RandomFragment">


    <EditText
        android:id="@+id/edt_min"
        style="@style/edittext"
        android:layout_marginStart="20dp"
        android:hint="Min"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.093"
        tools:ignore="Autofill,HardcodedText" />

    <EditText
        android:id="@+id/edt_max"
        style="@style/edittext"
        android:layout_marginEnd="20dp"
        android:hint="Max"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.093"
        tools:ignore="Autofill,HardcodedText" />

    <Button
        android:id="@+id/btn_random"
        style="@style/Randombutton"
        android:text="click"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/edt_max"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toEndOf="@+id/edt_min"
        app:layout_constraintTop_toTopOf="@+id/edt_min"
        app:layout_constraintVertical_bias="0.844"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/tv_result"
        style="@style/textview"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="Result"
        app:layout_constraintBottom_toTopOf="@+id/btn_random"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.686"
        tools:ignore="HardcodedText" />


</androidx.constraintlayout.widget.ConstraintLayout>