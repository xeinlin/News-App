<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_smoke"
    android:orientation="vertical">

    <TextView
        android:id="@+id/placeholder"
        android:layout_width="match_parent"
        android:layout_height="102dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="60sp"
        android:layout_weight="1"
        android:gravity="end"
        android:singleLine="true"
        android:text="@string/empty_string"
        android:textColor="@color/black"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/answer"
        android:layout_width="match_parent"
        android:layout_height="103dp"
        android:layout_marginHorizontal="30dp"
        android:layout_weight="1"
        android:gravity="end"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="45sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="20dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/clear"
            style="@style/ActionButtonStyle"
            android:text="@string/calculator_ac"
            tools:ignore="TextContrastCheck" />


        <TextView
            android:id="@+id/startBracket"
            style="@style/ActionButtonStyle"
            android:text="@string/calculator_bracket"
            tools:ignore="TextContrastCheck" />


        <TextView
            android:id="@+id/closeBracket"
            style="@style/ActionButtonStyle"
            android:text="@string/calculator_bracket_r"
            tools:ignore="TextContrastCheck" />


        <TextView
            android:id="@+id/actionDivide"
            style="@style/ActionButtonStyle"
            android:text="@string/calculator_division"
            tools:ignore="TextContrastCheck" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="20dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/num7"
            style="@style/NumberButtonStyle"
            android:text="@string/calcu_seven" />


        <TextView
            android:id="@+id/num8"
            style="@style/NumberButtonStyle"
            android:text="@string/calcu_8" />


        <TextView
            android:id="@+id/num9"
            style="@style/NumberButtonStyle"
            android:text="@string/calcu_9" />


        <TextView
            android:id="@+id/actionMultiply"
            style="@style/ActionButtonStyle"
            android:text="@string/calculator_multiplication"
            tools:ignore="TextContrastCheck" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="20dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/num4"
            style="@style/NumberButtonStyle"
            android:text="@string/calcu_4" />


        <TextView
            android:id="@+id/num5"
            style="@style/NumberButtonStyle"
            android:text="@string/calcu_5" />


        <TextView
            android:id="@+id/num6"
            style="@style/NumberButtonStyle"
            android:text="@string/calcu_6" />


        <TextView
            android:id="@+id/actionMinus"
            style="@style/ActionButtonStyle"
            android:text="@string/calculator_minus"
            tools:ignore="TextContrastCheck" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="20dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/num1"
            style="@style/NumberButtonStyle"
            android:text="@string/calcu_1" />


        <TextView
            android:id="@+id/num2"
            style="@style/NumberButtonStyle"
            android:text="@string/calcu_2" />


        <TextView
            android:id="@+id/num3"
            style="@style/NumberButtonStyle"
            android:text="@string/calcu_3" />


        <TextView
            android:id="@+id/actionAdd"
            style="@style/ActionButtonStyle"
            android:text="@string/calculator_plus"
            tools:ignore="TextContrastCheck" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="20dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/numDot"
            style="@style/NumberButtonStyle"
            android:text="@string/calcu_dot" />


        <TextView
            android:id="@+id/num0"
            style="@style/NumberButtonStyle"
            android:text="@string/calcu_0" />


        <TextView
            android:id="@+id/actionBack"
            style="@style/ActionButtonStyle"
            android:text="@string/calculator_back"
            tools:ignore="TextContrastCheck" />


        <TextView
            android:id="@+id/actionEquals"
            style="@style/SpecialActionButtonStyle"
            android:text="@string/calculator_equal"
            tools:ignore="TextContrastCheck" />

    </LinearLayout>


</LinearLayout>